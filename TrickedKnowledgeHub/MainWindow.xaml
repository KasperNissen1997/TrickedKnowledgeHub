<Window x:Class="TrickedKnowledgeHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrickedKnowledgeHub"
        mc:Ignorable="d"
        Title="MainWindow"  WindowState="Maximized" d:DesignHeight="450" d:DesignWidth="900">

    <Grid>
        <StackPanel Height="auto" Width="auto"
            Orientation="Vertical" Background="#e7e7e7">
        </StackPanel>
        <Image Source="img/TrickedLog.jpg" Opacity="0.60" />
            <Button x:Name="Create_Exercise" Content="Opret øvelse" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,200"  Height="50" Width="150" Click="Create_Exercise_Click" Background="#FF0CBE94" Foreground="White" FontSize="18" FontWeight="Bold">
                <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
                </Button.Resources>
            </Button>

    </Grid>
</Window>
